include <stdio.h>

int main() {
    // Declare two variables to store the numbers
    float num1, num2, sum;

    // Prompt the user for input
    printf("Enter first number: ");
    scanf("%f", &num1); // Input the first number

    printf("Enter second number: ");
    scanf("%f", &num2); // Input the second number

    // Calculate the sum
    sum = num1 + num2;

    // Output the result
    printf("The sum of %.2f and %.2f is %.2f\n", num1, num2, sum);

    return 0;
}
